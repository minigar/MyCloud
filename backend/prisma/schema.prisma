generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String

  hashedRT String?

  files File[]

  role    Role    @default(USER)
  isAdmin Boolean @default(false)

  localProfile LocalProfile?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LocalProfile {
  id Int @id @default(autoincrement())

  password String

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}

model File {
  id Int @id @default(autoincrement())

  originalname String
  filename     String
  mimeType     String
  size         Int

  user   User @relation(fields: [userId], references: [id])
  userId Int

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

enum Role {
  USER
  ADMIN
}
